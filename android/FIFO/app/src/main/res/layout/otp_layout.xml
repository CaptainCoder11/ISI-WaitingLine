<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <in.aabhasjindal.otptextview.OtpTextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        app:height="@dimen/_40sdp"
        app:width="@dimen/_40sdp"
        app:bar_enabled="true"
        android:layout_marginBottom="@dimen/_15sdp"
        app:bar_height="@dimen/_2sdp"
        app:bar_active_color="@color/transparent"
        app:otp_box_background_active="@drawable/background_rect"
        app:length="6"
        app:otp_text_size="@dimen/_24ssp"/>

    <Button
        android:id="@+id/btverify"
        android:layout_below="@+id/otp_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_37sdp"
        android:textColor="@color/black"
        android:layout_width="@dimen/_115sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/rounded_button_white"
        android:text="Verify"
        android:textAllCaps="false"
        android:textSize="@dimen/_17ssp"></Button>

</RelativeLayout>